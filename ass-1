chocolatebox=100
saltpacket=120
wheatflourpacket=120
chillipowderpackets=100
turmericpowderpacket=153
c=(input("enter cname"))
p=int(input("enter cphno"))
qcb=int(input("enter no of chocolate box"))
qsp=int(input("enter no of salt packets"))
qwfp=int(input("enter no of wheat flour packets"))
qcpp=int(input("enter no of chilli powder packets"))
qtpp=int(input("enter no of turmeric powder packets"))
bill=(qcb*chocolatebox)+(qsp*saltpacket)+(qwfp*wheatflourpacket)+(qcpp*chillipowderpackets)+(qtpp*turmericpowderpacket)
if bill>5000:
    disc=(bill*10)/100
elif bill>3000:
    disc=(bill*80)/100
elif bill>2000:
    disc=(bill*5)/100
elif bill<1000:
    disc=(bill*3)/100
if bill>3000:
    tax=(bill*10)/100
else:
    tax=(bill*18)/100
mainbill=bill-disc+tax
print("mainbill",mainbill)
